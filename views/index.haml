%html  
  %head  
    %title This is the Title in a title tag within the head tag  
    %script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
    %script(type="text/javascript" src="https://www.google.com/jsapi")
    %script(type="text/javascript")
      var data = google.visualization.arrayToDataTable([['Day', 'Unstarted', 'Started', 'Finished', 'Delivered', 'Accepted', 'Rejected'],
      - @data.each do |data|
        ['#{data['created_at']}', #{data['unstarted']}, #{data['started']},  #{data['finished']}, #{data['delivered']}, #{data['accepted']},  #{data['rejected']}],
      ]);
  %body  
    %h1 Current Sprint

    #chart{style: "width: 900px; height: 500px;"}

  :javascript
        google.load("visualization", "1", { packages:["corechart"]});
        google.setOnLoadCallback(drawChart);

        function drawChart() {
             var options = {
                 isStacked: true,
                 hAxis: { title: 'Day' }
             };

             var chart = new google.visualization.ColumnChart(
                 document.getElementById('chart'));
              chart.draw(data, options);
          }
